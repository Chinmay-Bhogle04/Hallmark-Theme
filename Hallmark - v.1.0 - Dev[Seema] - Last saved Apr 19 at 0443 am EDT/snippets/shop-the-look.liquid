<div class="shop-the-look-wrapper
            {% if section.settings.enable_section_padding != blank %} section-padding{% endif %}">
  <div class="full-width">
    {% capture image_layout %}
    <div class="image-wrapper image--{{ section.settings.layout }}">
      {% if section.settings.image != blank %}
      <img class="lazyload"
           src="{{ section.settings.image | img_url: 'master' }}"
           data-src="{{ section.settings.image | img_url:"master" }}"
           data-sizes="auto"
           alt="" />
      {% endif %}
      <span class="shopTheLook_dot" style="left: 54%;top: 51%;"></span>
      <div class="shopTheLookProductWrapper">
        <div class="product-image">
          <img class="lazyload"
               src="https://cdn.shopify.com/s/files/1/0554/4398/0469/files/Group_85151.png?v=1616743831"
               data-src="https://cdn.shopify.com/s/files/1/0554/4398/0469/files/Group_85151.png?v=1616743831"
               data-sizes="auto"
               alt="" />
        </div>
        <div class="product-detail">
          <span class="collection-title">Diamond collection</span>
          <h4 class="product-title">Round Diamond Wedding Band</h4>
          <div class="price-wrapper">
            <span class="price">$599</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="11" height="18" class="icon-arrow" viewBox="0 0 11 18"><defs><style>.ri-arr-a,.ri-arr-b{fill:#fff;}.ri-arr-a{opacity:0;}</style></defs><g transform="translate(-179 -2964)"><rect class="ri-arr-a" width="11" height="18" transform="translate(179 2964)"></rect><g transform="translate(7012.014 1729.938)"><path class="ri-arr-b" d="M471.808,1701.186a.916.916,0,0,1-.648-1.565l4.372-4.374-4.372-4.373a.917.917,0,1,1,1.3-1.3l5.022,5.022a.919.919,0,0,1,0,1.3l-5.022,5.022A.921.921,0,0,1,471.808,1701.186Z" transform="translate(-7301.116 -451.686)"></path></g></g></svg>
          </div>
        </div>
      </div>
      <span class="shopTheLook_dot" style="right: 10%;top: 77%;"></span>
    </div>
    {% endcapture %}
    <div class="page-width">
      <div class="layout layout-image--{{ section.settings.layout }}">
        {% if section.settings.layout == 'left' %}
        {{ image_layout }}
        {% endif %}

        <div class="content-wrapper 
                    content--{% if section.settings.layout == 'left' %}right{% else %}left{% endif %}">
          {% if section.settings.section_title != blank %}
          <h2>{{ section.settings.section_title }}</h2>
          {% endif %}
          {% if section.settings.sub_title != blank %}
          <p>{{ section.settings.sub_title }}</p>
          {% endif %}
          {% if section.settings.title != blank %}
          <h3>{{ section.settings.title }}</h3>
          {% endif %}
          {% if section.settings.button_label != blank and section.settings.button_link != blank %}
          <a href="{{ section.settings.button_link }}" class="btn btn-inline btn-inline-dark">
            {{ section.settings.button_label }}
            <svg xmlns="http://www.w3.org/2000/svg" width="8" height="13" viewBox="0 0 8 13"><defs><style>.inline-btn-dark-a{fill:#fff;opacity:0;}.inline-btn-dark-b{fill:#293542;}</style></defs><g transform="translate(-291.239 -2970.859)"><rect class="inline-btn-dark-a" width="8" height="13" transform="translate(291.239 2970.859)"></rect><g transform="translate(7122.69 1734.388)"><path class="inline-btn-dark-b" d="M471.717,1700.012a.826.826,0,0,1-.584-1.41l3.94-3.942-3.94-3.941a.827.827,0,0,1,1.169-1.169l4.526,4.526a.828.828,0,0,1,0,1.169l-4.526,4.526A.829.829,0,0,1,471.717,1700.012Z" transform="translate(-7301.116 -451.686)"></path></g></g></svg>
          </a>
          {% endif %}
        </div>

        {% if section.settings.layout == 'right' %}
        {{ image_layout }}
        {% endif %}
      </div>
    </div>
  </div>
</div>