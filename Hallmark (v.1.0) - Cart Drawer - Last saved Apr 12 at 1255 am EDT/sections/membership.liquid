<div class="full-width">
  <div class="membership-header text-center">
    {% if section.settings.sub_title != blank %}
    <p>{{ section.settings.sub_title }}</p>
    {% endif %}
    {% if section.settings.title != blank %}
    <h2>{{ section.settings.title }}</h2>
    {% endif %}
    <div class="btn-group">
      {% if section.settings.button_label_1 != blank and section.settings.button_link_1 != blank %}
      <a href="{{ section.settings.button_link_1 }}" class="btn btn-secondary">
        {{ section.settings.button_label_1 }}
        <svg xmlns="http://www.w3.org/2000/svg" width="6" height="9" viewBox="0 0 6 9"><defs><style>.mmb-btn-arr-a{fill:#fff;opacity:0;}.mmb-btn-arr-b{fill:none;stroke:#fff;stroke-linecap:round;stroke-width:0.8px;}</style></defs><g transform="translate(-87.193 -5)"><rect class="mmb-btn-arr-a" width="6" height="9" transform="translate(87.193 5)"/><g transform="translate(88.643 6.02)"><line class="mmb-btn-arr-b" x2="3.282" y2="3.282"/><line class="mmb-btn-arr-b" y1="3.282" x2="3.282" transform="translate(0 3.282)"/></g></g></svg>
      </a>
      {% endif %}
      {% if section.settings.button_label_2 != blank and section.settings.button_link_2 != blank %}
      <a href="{{ section.settings.button_link_2 }}" class="btn btn-secondary">
        {{ section.settings.button_label_2 }}
        <svg xmlns="http://www.w3.org/2000/svg" width="6" height="9" viewBox="0 0 6 9"><defs><style>.mmb-btn-arr-a{fill:#fff;opacity:0;}.mmb-btn-arr-b{fill:none;stroke:#fff;stroke-linecap:round;stroke-width:0.8px;}</style></defs><g transform="translate(-87.193 -5)"><rect class="mmb-btn-arr-a" width="6" height="9" transform="translate(87.193 5)"/><g transform="translate(88.643 6.02)"><line class="mmb-btn-arr-b" x2="3.282" y2="3.282"/><line class="mmb-btn-arr-b" y1="3.282" x2="3.282" transform="translate(0 3.282)"/></g></g></svg>
      </a>
      {% endif %}
    </div>
  </div>
  <div class="membership-content">
    <div class="content">
      {% if section.settings.content_title != blank %}
      <h3>{{ section.settings.content_title | escape }}</h3>
      {% endif %}
      <ul>
        {% for block in section.blocks %}
        <li>
          {% if block.settings.title != blank %}
          <span>{{ block.settings.title }}</span>
          {% endif %}
          {% if block.settings.text != blank %}
          <p>{{ block.settings.text }}</p>
          {% endif %}
        </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Membership",
	"class": "membership-section",
	"max_blocks": 5,
    "settings": [
	  {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Heading"
      },
	  {
        "type": "text",
        "id": "sub_title",
        "label": "Subtitle",
        "default": "Subtitle"
      },
      {
        "type": "text",
        "id": "button_label_1",
        "label": "Button label 1"
      },
      {
        "type": "url",
        "id": "button_link_1",
        "label": "Button link 1"
      },
      {
        "type": "text",
        "id": "button_label_2",
        "label": "Button label 2"
      },
      {
        "type": "url",
        "id": "button_link_2",
        "label": "Button link 2"
      },
      {
        "type": "header",
        "content": "Content"
      },
	  {
        "type": "text",
        "id": "content_title",
        "label": "Title",
        "default": "Content title"
      }
	],
    "blocks":[
      {
        "type": "row",
        "name": "Row",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title",
			"default": "Title"
          },
		  {
            "type": "textarea",
            "id": "text",
            "label": "Text",
			"default": "Text goes here."
          }
    	]
      }
    ],
    "presets": [
      {
        "name": "Membership",
        "category": "Promotional"
      }
    ]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

