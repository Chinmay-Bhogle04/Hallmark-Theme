<div class="page-width">
  {% include 'section-header' %}
  {% include 'five-columns' %}
</div>
<style>
  .five-colummns-section .column h3 {
    color: {{ section.settings.column_title_color }};
  }
</style>


{% schema %}
  {
    "name": "Five columns",
    "class": "five-colummns-section",
	"max_blocks": 5,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Five columns"
      },
      {
        "type": "text",
        "id": "sub_title",
        "label": "Subtitle",
        "default": "Subtitle"
      },
	  {
        "type": "color",
        "id": "column_title_color",
        "label": "Column title color",
        "default": "#FFF"
	  },
      {
        "type": "select",
        "id": "layout",
        "label": "Large image alignment",
        "default": "right",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ]
      }
    ],
    "blocks": [
      {
        "type": "text_block",
        "name": "Column",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
			"info": "Recommended size: 378px * 224px"
          },
          {
            "type": "text",
            "id": "column_title",
            "label": "Title",
            "default": "Add a title"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ]
  }
{% endschema %}

