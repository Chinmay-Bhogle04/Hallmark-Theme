<div class="page-width">
  {% if section.settings.title != blank %}
  <div class="section-header text-center with-btn wow fadeInUp" data-wow-delay="500ms">
    <h2>{{ section.settings.title | escape }}</h2>
    {% if section.settings.button_label != blank and section.settings.button_link != blank %}
    <a href="{{ section.settings.button_link }}" class="btn btn-inline btn-inline-dark">
      {{ section.settings.button_label }}
      <svg xmlns="http://www.w3.org/2000/svg" width="8" height="13" viewBox="0 0 8 13"><defs><style>.inline-btn-dark-a{fill:#fff;opacity:0;}.inline-btn-dark-b{fill:#293542;}</style></defs><g transform="translate(-291.239 -2970.859)"><rect class="inline-btn-dark-a" width="8" height="13" transform="translate(291.239 2970.859)"></rect><g transform="translate(7122.69 1734.388)"><path class="inline-btn-dark-b" d="M471.717,1700.012a.826.826,0,0,1-.584-1.41l3.94-3.942-3.94-3.941a.827.827,0,0,1,1.169-1.169l4.526,4.526a.828.828,0,0,1,0,1.169l-4.526,4.526A.829.829,0,0,1,471.717,1700.012Z" transform="translate(-7301.116 -451.686)"></path></g></g></svg>
    </a>
    {% endif %}
  </div>
  {% endif %}
  <div class="four-columns">
    {% for block in section.blocks %}
    <div class="column wow fadeInUp" data-wow-delay="500ms">
      {% if block.settings.block_button_label != blank and block.settings.block_button_link != blank %}
      <a href="{{ block.settings.block_button_link }}">
      {% endif %}
      <img class="lazyload"
           src="{{ block.settings.image | img_url: 'master' }}"
           data-src="{{ block.settings.image | img_url:"master" }}"
           data-sizes="auto"
           alt="" />
      <div class="column-content text-center">
        {% if block.settings.column_title != blank %}
        <h3>{{ block.settings.column_title }}</h3>
        {% endif %}
        {% if block.settings.block_button_label != blank and block.settings.block_button_link != blank %}
        <span class="btn btn-inline">
          {{ block.settings.block_button_label }}
          <svg xmlns="http://www.w3.org/2000/svg" width="8" height="13" viewBox="0 0 8 13"><defs><style>.inline-btn-wh-a,.inline-btn-wh-b{fill:#fff;}.inline-btn-wh-a{opacity:0;}</style></defs><g transform="translate(-147 -1599)"><rect class="inline-btn-wh-a" width="8" height="13" transform="translate(147 1599)"></rect><g transform="translate(6978.088 362.389)"><path class="inline-btn-wh-b" d="M471.717,1700.012a.826.826,0,0,1-.584-1.41l3.94-3.942-3.94-3.941a.827.827,0,0,1,1.169-1.169l4.526,4.526a.828.828,0,0,1,0,1.169l-4.526,4.526A.829.829,0,0,1,471.717,1700.012Z" transform="translate(-7301.116 -451.686)"></path></g></g></svg>
        </span>
        {% endif %}
      </div>
      {% if block.settings.block_button_label != blank and block.settings.block_button_link != blank %}
      </a>
      {% endif %}
    </div>
    {% endfor %}
  </div>
</div>


{% schema %}
  {
    "name": "Four columns",
    "class": "four-columns-section section-padding",
	"max_blocks": 4,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Five columns"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }
    ],
    "blocks": [
      {
        "type": "text_block",
        "name": "Column",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
			"info": "Recommended size: 542px * 452px"
          },
          {
            "type": "text",
            "id": "column_title",
            "label": "Title",
            "default": "Title"
          },
          {
            "type": "text",
            "id": "block_button_label",
            "label": "Button label",
			"default": "Shop the selection"
          },
          {
            "type": "url",
            "id": "block_button_link",
            "label": "Button link"
          }
        ]
      }
    ]
  }
{% endschema %}

